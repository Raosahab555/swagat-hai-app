<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_account">

    <ImageView
        android:id="@+id/backbutton"
        android:layout_width="51dp"
        android:layout_height="34dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/back_button" />

    <ImageView
        android:layout_width="302dp"
        android:layout_height="307dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="-40dp"
        android:src="@drawable/icon_swagat_hai" />

    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="189dp"
        android:layout_height="180dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="99dp"
        android:src="@drawable/create_screen_textimg" />
    <TextView
        android:id="@+id/txtmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/etname"
        android:textSize="11sp"
        android:text=""
        android:layout_marginBottom="-40dp"
        android:layout_marginStart="60dp"
        android:textColor="#FF0000"/>

    <EditText
        android:id="@+id/etname"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/imglogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/textinpurborder_red"
        android:drawableStart="@drawable/person_logo_red"
        android:drawablePadding="12dp"
        android:hint="enter your name"
        android:inputType="textPersonName"
        android:minWidth="300dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColorHint="#FBAAAA" />

    <EditText
        android:id="@+id/etemail"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/etname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/textinpurborder_yellow"
        android:drawableStart="@drawable/email_logo_yellow"
        android:drawablePadding="12dp"
        android:hint="enter your e-mail address"
        android:inputType="textEmailAddress"
        android:minWidth="300dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColorHint="#FFDA96" />

    <EditText
        android:id="@+id/etcreatepassword"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/etemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/textinpurborder_black2"
        android:drawableStart="@drawable/lock_logo_grey"
        android:drawablePadding="12dp"
        android:hint="create your password"
        android:inputType="textPassword"
        android:minWidth="300dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColorHint="#898989" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnregister"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/etcreatepassword"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_styles_blue"
        android:fontFamily="sans-serif-light"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#1A4789"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtmethods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnregister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="or use different methods" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button2"
        android:layout_width="220dp"
        android:layout_height="63dp"
        android:layout_below="@+id/txtmethods"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />



</RelativeLayout>